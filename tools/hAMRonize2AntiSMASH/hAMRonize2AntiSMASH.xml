<tool id="hAMRonize2AntiSMASH" name="Convert hAMRonize to AntiSMASH" version="1.0.0" profile="21.09">
  <requirements><requirement type="package" version="3.9">python</requirement></requirements>
  <command detect_errors="exit_code"><![CDATA[
  ln -s '$input' input.json;
  python '$__tool_directory__/script.py']]></command>
  <inputs>
  <param name="input" type="data" format="json" label="Output of hAMRonize summarized"/>
  </inputs>
  <outputs>
  <data name="output" format="json" from_work_dir="output.json" label="AntiSMASH sideload file">
  </outputs>
  <tests>
      <test expect_num_outputs="1">  
          <param name="input" value="test.json"/>
          <output name="output" file="output.json"/>
      </test>
  </tests>
  <help>
  <![CDATA[Convert hAMRonize summarize output to AntiSMASH sideload input]]>
  </help>
  </tool>
